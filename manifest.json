{
  "name": "Pokedex Infinite Scroll Extension",
  "description": "Pokedex無限捲動加載插件",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "48": "icon_48.png"
  },
  "action": {
    "default_icon": "icon_48.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tw.portal-pokemon.com/*"
      ],
      "js": [
        "./src/content-script.js"
      ]
    }
  ]
}